{
  "name": "fitness-web",
  "version": "1.0.0",
  "private": true,
  "description": "BKD Fitness Lab static web app",
  "scripts": {
    "check:syntax": "node --check script.js && node --check sw.js",
    "check:project": "node scripts/ci-checks.mjs",
    "lint": "eslint script.js sw.js scripts/**/*.mjs eslint.config.mjs",
    "check": "npm run check:syntax && npm run lint && npm run check:project && npm run format:check",
    "format": "prettier --write \"*.{html,css,js,mjs,md,json,webmanifest}\" \".github/**/*.yml\" \"scripts/**/*.mjs\"",
    "format:check": "prettier --check \"*.{html,css,js,mjs,md,json,webmanifest}\" \".github/**/*.yml\" \"scripts/**/*.mjs\""
  },
  "devDependencies": {
    "@eslint/js": "^9.22.0",
    "eslint": "^9.22.0",
    "globals": "^16.0.0",
    "prettier": "^3.5.3"
  }
}
